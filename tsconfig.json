{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],

      "@components/*": ["src/components/*"],
      "@common/*": ["src/components/common/*"],
      "@cv/*": ["src/components/cv/*"],

      "@icons/*": ["src/components/icons/*"],

      "@assets/*": ["src/assets/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "exclude": ["node_modules", "dist", "hide"]
}
